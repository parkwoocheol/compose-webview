class YourComposableState(
    initialValue: String
) {
    /**
     * Current value of the state.
     */
    var value by mutableStateOf(initialValue)
        private set

    /**
     * Update the value.
     *
     * @param newValue The new value
     */
    fun updateValue(newValue: String) {
        value = newValue
    }
}

/**
 * Remember a [YourComposableState].
 *
 * @param initialValue Initial value for the state
 * @return Remembered state instance
 */
@Composable
fun rememberYourComposableState(
    initialValue: String = ""
): YourComposableState {
    return remember { YourComposableState(initialValue) }
}

